<p id="notice"><%= notice %></p>

<h1>Listing Destinations</h1>

<p>
<%= link_to 'New Destination', new_destination_path, class: "btn btn-success" %>
</p>

<ul class="nav nav-pills" role="tablist">
  <li><%= link_to "All", destinations_path %></li>
  <% @countries.each do |c| %>
   <li><%= link_to "#{c.country}", controller: "destinations", country: "#{c.country}" %></li>
  <% end %>
</ul>

<div class="row">
  <% @destinations.each do |destination| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= destination.city %>,<%= destination.country %>
        </div>
        <div class="panel-body">
          <% if destination.avatar_file_name != nil %>
           <%= image_tag destination.avatar.url(:medium), class: "img-responsive" %>
          <% end %>
        <p><strong>Pop:</strong> <%= number_with_delimiter(destination.population, :delimiter => ',') %></p>
        <p><%= destination.description %></p>
        <p>
         <%= link_to 'Show', destination, class: "btn btn-info" %>
         <%= link_to 'Edit', edit_destination_path(destination), class: "btn btn-warning" %>
         <%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </p>
      </div>
    </div>
  </div>
<% end %>
</div>



